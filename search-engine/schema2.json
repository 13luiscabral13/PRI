        },
        {
            "name": "release_date",
            "type": "release_date",
            "indexed": true
        },
        {
            "name": "meta_score",
            "type": "meta_score",
            "indexed": true
        },
        {
            "name": "user_review",
            "type": "user_review",
            "indexed": true
        },
        {
            "name": "reviewer",
            "type": "shortTextfield",
            "indexed": true
        },
        {
            "name": "review",
